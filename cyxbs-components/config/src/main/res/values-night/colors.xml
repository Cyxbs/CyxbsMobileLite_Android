<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <color name="colorPrimary" tools:ignore="ResourceName">#000000</color>
    <color name="colorPrimaryDark" tools:ignore="ResourceName">#000000</color>
    <color name="colorAccent" tools:ignore="ResourceName">#ffffff</color>

    <!--如果要使用纯白色和纯黑色（日间和夜间模式也一样），请使用 @android:color/white-->

    <color name="config_white_black">#000000</color>
    <color name="config_black_white">#FFFFFF</color>

    <!--视觉最常用的背景颜色，夜间为 2D2D2D-->
    <color name="config_common_background_color">#2D2D2D</color>

    <!--    主要字体颜色分以下四种，下列按照蓝色由深到浅排序，要用自取-->
    <!--    一级字体颜色-->
    <color name="config_level_one_font_color">#ffffff</color>
    <!--    二级字体颜色-->
    <color name="config_level_two_font_color">#ffffff</color>
    <!--    三级字体颜色-->
    <color name="config_level_three_font_color">#ffffff</color>
    <!--    四级字体颜色-->
    <color name="config_level_four_font_color">#ffffff</color>

    <!--    60%透明度的二级字体-->
    <color name="config_alpha_level_two_font_color">#5A5A5A</color>
    <!--    44%透明度的二级字体-->
    <color name="config_alpha_forty_level_two_font_color">#705A5A5A</color>

    <!--    公共dialog背景-->
    <color name="config_dialog_bg">#2C2C2C</color>

    <!--视觉要的若隐若现阴影的 startColor，在 drawable/config_layer_looming_shadow 中使用-->
    <color name="config_layer_looming_shadow_start_color">#1D1D1D</color>

    <!--视觉要的若隐若现阴影的 endColor，在 drawable/config_layer_looming_shadow 中使用-->
    <color name="config_layer_looming_shadow_end_color">#1D1D1D</color>

    <!--lib_base 中公用的 BaseDialog 的按钮颜色-->
    <color name="config_choose_dialog_btn_positive">#4A44E4</color>
    <color name="config_choose_dialog_btn_negative">#CC5A5A5A</color>

    <!--主页面的整体灰色背景-->
    <color name="config_window_background">#000000</color>

    <!--    按钮渐变起始颜色-->
    <color name="config_button_gradient_start_color">#4841E2</color>
    <!--    按钮渐变终止颜色-->
    <color name="config_button_gradient_end_color">#4841E2</color>

</resources>